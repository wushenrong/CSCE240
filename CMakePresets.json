{
  "version": 8,
  "configurePresets": [
    {
      "name": "base",
      "displayName": "Default build using Ninja",
      "generator": "Ninja",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "Build using Visual Studio (Debug)",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "Build using Visual Studio (Release)",
      "inherits": [
        "msvc-debug"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "Build using GCC (Debug)",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "Build using GCC (Release)",
      "inherits": [
        "gcc-debug"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Build using Clang (Debug)",
      "inherits": [
        "base"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Build using Clang (Release)",
      "inherits": [
        "clang-debug"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default-msvc",
      "displayName": "Default Visual Studio Build",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "default-gcc",
      "displayName": "Default GCC Build",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "default-clang",
      "displayName": "Default Clang Build",
      "configurePreset": "clang-debug"
    }
  ]
}
