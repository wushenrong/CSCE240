{
  "buildPresets": [
    {
      "configurePreset": "windows-debug",
      "displayName": "Default Windows Build",
      "name": "default-windows"
    },
    {
      "configurePreset": "linux-debug",
      "displayName": "Default Linux Build",
      "name": "default-linux"
    }
  ],
  "configurePresets": [
    {
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      },
      "displayName": "Default build using Ninja",
      "generator": "Ninja",
      "hidden": true,
      "installDir": "${sourceDir}/out/install/${presetName}",
      "name": "base"
    },
    {
      "displayName": "Get libraries using vcpkg",
      "hidden": true,
      "name": "vcpkg",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "hidden": true,
      "name": "debug"
    },
    {
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": true
      },
      "hidden": true,
      "name": "release"
    },
    {
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true
      },
      "hidden": true,
      "name": "share"
    },
    {
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "hidden": true,
      "name": "msvc",
      "toolset": {
        "strategy": "external",
        "value": "host=x64"
      }
    },
    {
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      },
      "hidden": true,
      "name": "gcc",
      "toolset": {
        "strategy": "external",
        "value": "host=x64"
      }
    },
    {
      "displayName": "Build using Visual Studio (Debug)",
      "inherits": [
        "base",
        "vcpkg",
        "msvc",
        "debug"
      ],
      "name": "windows-debug"
    },
    {
      "displayName": "Build using Visual Studio (Release)",
      "inherits": [
        "base",
        "vcpkg",
        "msvc",
        "release"
      ],
      "name": "windows-release"
    },
    {
      "displayName": "Build Shared Libraries using Visual Studio (Debug)",
      "inherits": [
        "base",
        "vcpkg",
        "msvc",
        "debug",
        "share"
      ],
      "name": "windows-share-debug"
    },
    {
      "displayName": "Build Shared Libraries using Visual Studio (Release)",
      "inherits": [
        "base",
        "vcpkg",
        "msvc",
        "release",
        "share"
      ],
      "name": "windows-share-release"
    },
    {
      "displayName": "Build using GCC (Debug)",
      "inherits": [
        "base",
        "gcc",
        "debug"
      ],
      "name": "linux-debug"
    },
    {
      "displayName": "Build using GCC (Release)",
      "inherits": [
        "base",
        "gcc",
        "release"
      ],
      "name": "linux-release"
    },
    {
      "displayName": "Build Shared Libraries using GCC (Debug)",
      "inherits": [
        "base",
        "gcc",
        "debug",
        "share"
      ],
      "name": "linux-share-debug"
    },
    {
      "displayName": "Build Shared Libraries using GCC (Release)",
      "inherits": [
        "base",
        "gcc",
        "release",
        "share"
      ],
      "name": "linux-shared-release"
    },
    {
      "displayName": "Build using GCC (Debug) with vcpkg",
      "inherits": [
        "base",
        "vcpkg",
        "gcc",
        "debug"
      ],
      "name": "linux-vcpkg-debug"
    },
    {
      "displayName": "Build using GCC (Release) with vcpkg",
      "inherits": [
        "base",
        "vcpkg",
        "gcc",
        "release"
      ],
      "name": "linux-vcpkg-release"
    },
    {
      "displayName": "Build Shared Libraries using GCC (Debug) with vcpkg",
      "inherits": [
        "base",
        "vcpkg",
        "gcc",
        "debug",
        "share"
      ],
      "name": "linux-vcpkg-share-debug"
    },
    {
      "displayName": "Build Shared Libraries using GCC (Release) with vcpkg",
      "inherits": [
        "base",
        "vcpkg",
        "gcc",
        "release",
        "share"
      ],
      "name": "linux-vcpkg-shared-release"
    },
    {
      "cacheVariables": {
        "ENABLE_CODE_COVERAGE": true
      },
      "displayName": "Build using Visual Studio With Coverage",
      "inherits": [
        "base",
        "vcpkg",
        "msvc",
        "debug"
      ],
      "name": "windows-coverage"
    },
    {
      "cacheVariables": {
        "ENABLE_CODE_COVERAGE": true
      },
      "displayName": "Build using GCC With Coverage",
      "inherits": [
        "base",
        "gcc",
        "debug"
      ],
      "name": "linux-coverage"
    }
  ],
  "testPresets": [
    {
      "configurePreset": "windows-debug",
      "name": "test-windows"
    },
    {
      "configurePreset": "linux-debug",
      "name": "test-linux"
    }
  ],
  "version": 8
}
